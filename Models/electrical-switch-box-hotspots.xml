<?xml version="1.0"?>
<!DOCTYPE PropertyList SYSTEM "panel.dtd">

<!-- This part should be the same for any 3D panel.  Customize the actions section -->
<PropertyList>

 <name>P51D Right Switch Box</name>
 <background>Aircraft/p51d/Models/transparent-bg.rgb</background>
 <w>1024</w>
 <h>768</h>
 <y-offset>0</y-offset>

 <instruments>
  <instrument>
    <name>right switch panel</name>
    <x>512</x>
    <y>384</y>
    <w>1024</w>
    <h>768</h>
    <w-base>1024</w-base>
    <h-base>1024</h-base>


    <layers>
        <layer>
            <name>background</name>
            <texture>
                <path>Aircraft/p51d/Models/transparent-bg.rgb</path>
                <x1>0.0</x1>
                <y1>0.0</y1>
                <x2>1.0</x2>
                <y2>1.0</y2>
            </texture>
        </layer>
    </layers>

    <!-- define hotspot actions below -->

    <actions>

        <!-- right floresant light switch-->
        <action>
            <name>rotate right flor knob</name>
            <button>0</button>
            <x>-70</x>
            <y>65</y>
            <w>180</w>
            <h>150</h>
            <binding>
                <command>property-adjust</command>
                <property>/controls/lighting/right-flor-pos</property>
                <min> 0 </min>
                <max> 4 </max>
                <step> 1 </step>
                <wrap> 1 </wrap>
            </binding>
        </action>

        <!-- Battery Disconect switch-->
        <action>
            <name>Battery Disconect Switch On</name>
            <button>0</button>
            <x>0</x>
            <y>-50</y>
            <w>50</w>
            <h>50</h>
            <binding>
                <command>property-assign</command>
                <property>/controls/engines/engine/master-bat</property>
                <value> 1 </value>
            </binding>
        </action>

        <action>
            <name>Battery Disconect Switch Off</name>
            <button>0</button>
            <x>0</x>
            <y>-90</y>
            <w>50</w>
            <h>50</h>
            <binding>
                <command>property-assign</command>
                <property>/controls/engines/engine/master-bat</property>
                <value> 0 </value>
            </binding>
        </action>

    </actions>

  </instrument>

 </instruments>

</PropertyList>