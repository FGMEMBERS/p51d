<?xml version="1.0"?>
<PropertyList>

 <path>piper.ac</path>

 <!-- pipper on/off -->
 <animation>
  <type>select</type>
  <object-name>pipper</object-name>
  <condition>
   <property>/controls/armament/gunsight/power-on</property>
  </condition>
 </animation>

 <!-- pipper brightness -->
 <animation>
  <type>material</type>
  <object-name>pipper</object-name>
  <emission>
   <red>1.0</red>
   <green>1.0</green>
   <blue>1.0</blue>
   <factor-prop>/controls/armament/gunsight/intensity</factor-prop>
  </emission>
 </animation>

 <!-- pipper depression with g-load -->
 <animation>
   <type>translate</type>
    <object-name>pipper</object-name>
    <property>accelerations/Nz</property>
    <factor>-0.012</factor>
    <min>0</min>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>1</z>
    </axis>
 </animation>

</PropertyList>
