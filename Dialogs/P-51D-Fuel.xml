<?xml version="1.0"?>

<PropertyList>
  <name>P-51D-Fuel</name>
  <layout>vbox</layout>
  <width>300</width>

  <text>
    <label>Internal Fuel</label>
  </text>

  <hrule><dummy/></hrule>

  <group>
    <layout>vbox</layout>
    <halign>left</halign>

    <text>
      <label>US Gallons</label>
    </text>

    <text>
      <label></label>
    </text>

      <group>
       <layout>vbox</layout>
       <halign>left</halign>

       <text>
         <label></label>
       </text>

       <input>
         <name>tank0</name>
         <halign>left</halign>
         <label>Left Wing Internal</label>
         <property>/consumables/fuel/tank[0]/level-gal_us</property>
       </input>

       <input>
         <name>tank1</name>
         <halign>left</halign>
         <label>Right Wing Internal</label>
         <property>/consumables/fuel/tank[1]/level-gal_us</property>
       </input>

       <input>
         <name>tank2</name>
         <halign>left</halign>
         <label>Fusalage</label>
         <property>/consumables/fuel/tank[2]/level-gal_us</property>
       </input>

     </group>
  </group>

  <text>
    <label></label>
  </text>

  <group>
   <layout>hbox</layout>

   <button>
     <legend>Close</legend>
     <default>true</default>
     <key>Esc</key>
     <binding>
       <command>dialog-close</command>
     </binding>
   </button>

   <button>
     <legend>Apply</legend>
     <default>true</default>
     <key>A</key>
     <binding>
        <command>dialog-apply</command>
        <object-name>tank0</object-name>
     </binding>
     <binding>
        <command>dialog-apply</command>
        <object-name>tank1</object-name>
     </binding>
     <binding>
        <command>dialog-apply</command>
        <object-name>tank2</object-name>
     </binding>
     <binding>
       <command>dialog-close</command>
     </binding>
   </button>
  </group>
</PropertyList>