<?xml version="1.0"?>

<PropertyList>
  <name>P-51D-Fuel</name>
  <layout>vbox</layout>
  <width>450</width>

  <text>
    <label>P-51D Fuel</label>
  </text>

  <hrule><dummy/></hrule>

  <group>
    <layout>vbox</layout>
    <halign>center</halign>

    <text>
      <label>Fuel Levels</label>
    </text>

    <text>
      <label></label>
    </text>

    <group>
      <layout>hbox</layout>

      <group>
       <layout>vbox</layout>
       <halign>left</halign>

       <text>
         <label>Tank</label>
       </text>

       <input>
         <halign>left</halign>
         <label>Left Internal Wing Takn</label>
         <property>/consumables/fuel/tank[0]/level-gal_us</property>
       </input>

       <input>
         <halign>left</halign>
         <label>Right Internal WIng Tank</label>
         <property>/consumables/fuel/tank[1]/level-gal_us</property>
       </input>

       <input>
         <halign>left</halign>
         <label>Fusalage Tank</label>
         <property>/consumables/fuel/tank[2]/level-gal_us</property>
       </input>


  </group>

  <text>
    <label></label>
  </text>

  <group>
   <layout>hbox</layout>

   <button>
     <legend>Close</legend>
     <default>true</default>
     <key>Esc</key>
     <binding>
       <command>dialog-close</command>
     </binding>
   </button>

